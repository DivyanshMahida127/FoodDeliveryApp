<h1> Hey! You are searching for restaurant's in <%= @state.name %> </h1>

<div class="container">
    <div class="row justify-content-center">
        <% @cities.each do |city| %>
            <div class="card p-3 text-right col-9 col-sm-5 col-lg-3 m-3">
                <blockquote class="blockquote mb-0">
                <p><%= link_to city.name, city_path(city) %></p>
                <footer class="blockquote-footer">
                    <small class="text-muted">
                        Multiple Restaurants and Cafe
                    </small>
                </footer>
                </blockquote>
            </div>
        <% end %>
    </div>
</div>